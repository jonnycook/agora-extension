$orange = #EAAD2B

inline-height($height)
	height $height
	line-height $height

truncated-text()
	overflow hidden
	text-overflow ellipsis
	white-space nowrap

shadow-style()
	box-shadow 0px 0px 0px 2px rgba(0, 0, 0, 0.1)

large-shadow-style()
	box-shadow 0px 0px 0px 4px rgba(0, 0, 0, 0.1)
	
box-style()
	border-radius 1px
	background-color #FFFFFF
	shadow-style()

hover-style()
	-webkit-transform: scale(1.2);

image-block($url, $width, $height)
	image $url $width $height
	display block
	width $width
	height $height

mosaic()
	position relative
	&.oneItem .image
		position absolute
		width 100%
		height 100%
		background-size cover
		background-position center
		background-repeat no-repeat

	&.twoItems .image
		position absolute
		width 50%
		height 100%
		background-size cover
		background-position center
		background-repeat no-repeat

		&:nth-of-type(1)
			left 0
			top 0

		&:nth-of-type(2)
			left 50%
			top 0

	&.threeItems .image
		position absolute
		background-size cover
		background-position center
		background-repeat no-repeat

		&:nth-of-type(1)
			width 50%
			height 50%
			left 0
			top 0

		&:nth-of-type(2)
			width 50%
			height 50%
			left 50%
			top 0

		&:nth-of-type(3)
			left 0
			top 50%
			height 50%
			width 100%

	&.fourItems .image
		position absolute
		width 50%
		height 50%
		background-size cover
		background-position center
		background-repeat no-repeat

		&:nth-of-type(1)
			left 0
			top 0

		&:nth-of-type(2)
			left 50%
			top 0

		&:nth-of-type(3)
			top 50%
			left 0

		&:nth-of-type(4)
			top 50%
			left 50%

