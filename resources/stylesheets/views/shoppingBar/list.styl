	.list.barItem.element
		background-color white
		&.hasAddDrop:not(.empty)
			padding-right 48px+10px

		&.hasAddDrop.empty .addDrop
			display none

		// &:not(.session).empty
		// 	image $base + 'icons/list.png' 28px 30px
		// 	background-position center
		// 	background-repeat no-repeat
		// 	height 48px

		&.collapsed
			width 48px

			&.oneItem .image
				position absolute
				width 48px
				height 48px
				background-size contain
				background-position center
				background-repeat no-repeat

			&.twoItems .image
				position absolute
				width 24px
				height 48px
				background-size cover
				background-position center
				background-repeat no-repeat

				&:nth-of-type(1)
					left 0
					top 0

				&:nth-of-type(2)
					left 50%
					top 0

			&.threeItems .image
				position absolute
				background-size cover
				background-position center
				background-repeat no-repeat

				&:nth-of-type(1)
					width 24px
					height 24px
					left 0
					top 0

				&:nth-of-type(2)
					width 24px
					height 24px
					left 50%
					top 0

				&:nth-of-type(3)
					left 0
					top 50%
					height 24px
					width 48px

			&.fourItems .image
				position absolute
				width 24px
				height 24px
				background-size contain
				background-position center
				background-repeat no-repeat

				&:nth-of-type(1)
					left 0
					top 0

				&:nth-of-type(2)
					left 50%
					top 0

				&:nth-of-type(3)
					top 50%
					left 0

				&:nth-of-type(4)
					top 50%
					left 50%
