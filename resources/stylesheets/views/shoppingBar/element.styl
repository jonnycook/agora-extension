	.barItem.element
		height 48px
		position absolute 
		z-index 0

		border-radius 1px

		&.shared
			.shareIndicator
				position absolute
				z-index 2

			&:not(:hover) .shareIndicator
					left 2px
					bottom 2px
					width 8px
					height 8px
					border-radius 4px
					background-color $darkGray

			&:hover .shareIndicator
					bottom -5px
					left -5px
					width 22px
					height 22px
					image $base + 'collaborate/collaborateIndicator.png' 10px 13px
					background-position center
					background-repeat no-repeat
					border-radius 11px
					background-color $darkGray



		.userIndicator
			position absolute
			left 2px
			bottom 2px
			width 8px
			height 8px
			border-radius 4px
			z-index 1

		.select
			visibility hidden
			position absolute
			left 0
			top 0
			width 100%
			height 48px

			z-index 10

			&:hover:before
				image $base + 'views/ShoppingBar/selectHover.png' 30px 30px

			&:checked:before
				image $base + 'views/ShoppingBar/selectChecked.png' 30px 30px


			&:before
				visibility visible
				content ''
				width 100%
				height 100%
				display block
				image $base + 'views/ShoppingBar/select.png' 26px 26px
				background-repeat no-repeat
				background-position center


		&:not(.bundle):not(.session).activeDrop:before
			content ''
			position absolute
			left 0
			right 0
			top 0
			bottom 0
			image $base + 'plus.png' 26px 26px
			background-repeat no-repeat
			background-position center
			background-color rgba(0, 0, 0, .15)
			z-index 2
			border-radius 2px

		&:not(.selectMode):hover input.chosen, input.chosen:checked
			display block

		input.chosen
			display none
			position absolute
			top 2px
			right 2px
			visibility hidden
			z-index 10
			width 20px
			height 15px

			&:checked:before
				image $base + 'checkDarkGraySmall.png' 12px 10px

			&:before
				content ''
				visibility visible

				background-position 4px 2px
				background-repeat no-repeat

				background-color white

				border-bottom-left-radius 1px

				position absolute
				top 0
				right 0

				width 20px
				height 15px
				image $base + 'checkLightGraySmall.png' 12px 10px
