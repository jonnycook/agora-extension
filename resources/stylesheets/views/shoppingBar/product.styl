.barItem.product
	&.error
		&:before
			content '!'
			color: #C46666;
			position absolute
			bottom 2px
			left 2px
			font-size 10px
			font-weight bold
			z-index 1


	span.image
		display block
		position absolute
		left 2px
		top 2px
		width 44px
		height 44px
		background-size contain
		background-position center
		background-repeat no-repeat
		border-radius 2px
		overflow hidden

		&.loading
			background-color $lightGray

	a
		position absolute
		z-index 1
		display block
		height 100%
		width 100%

	.feelingBadge
		left -7px
		top -1px
		transform scale(.65)
