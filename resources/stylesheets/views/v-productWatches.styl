.-agora .v-productWatches
	padding 30px
	.productWatch
		padding 10px
		margin 0 auto
		height 148px
		max-width 714px
		// min-width 500px
		// top 100px

		& + .productWatch
			margin-top 20px

		position relative

		background-color white
		box-style()



		&:not(.hasTarget) .meter .targetPrice
			display none

		&.targetMet .meter
			div.currentPrice, .diff
				background-color #66C466
				border-color #66C466

		&:not(.targetMet) .meter
			div.currentPrice, .diff
				background-color #C46666
				border-color #C46666

		&:not(.inited)
			&:before
				content 'Initing...'
			*
				display none

		&.outOfStock
			.meter
				&:before
					content 'out of stock'
					box-style()
					background-color $darkGray
					color white
					padding 10px
					display block
					width 100px
					margin -44px auto
					text-align center
				*
					display none


		.title
			display block
			margin-bottom 15px
			truncated-text()
			font-size 14px

		.image
			display block
			width 104px
			height 104px
			background-repeat no-repeat
			background-position center
			background-size contain
			background-color white
			border-radius 2px
			overflow hidden
			

		.meter
			position absolute
			left 124px
			right 10px
			height 10px
			top 100px
			background-color $lightGray


			label.min, label.max, label.currentPrice
				position absolute
				bottom 20px
				top auto
				box-style()
				background-color white
				padding 10px

			label.min
				left 2px

			label.max
				right 2px

			label.currentPrice
				&, .value
					color white
					text-align center
				.value
					display block
				background-color $darkGray

			label
				text-align center
				position absolute
				top 18px
				.value
					display block

			.diff
				position absolute
				height 100%
				left 0
				width 100px
				border-width 0 6px
				border-style solid
				margin-left -6px

			div.targetPrice
				margin-left -12px
				position absolute
				left 0
				top -6px
				font-size 0
				width 22px
				height 22px
				image $base + 'watchDarkGray.png' 22px 22px

			div.initialPrice
				position absolute
				font-size 0
				background-color $darkGray
				border 4px solid white
				width 10px
				height 10px
				border-radius 9px
				left 10px
				top -4px
				margin-left -9px

			div.currentPrice
				font-size 0
				position absolute
				margin-left -8px
				left 100px
				top -3px
				width 16px
				height 16px
				border-radius 8px
				box-shadow:         0px 0px 0px 2px rgba(0,0,0,0.10);
								
		