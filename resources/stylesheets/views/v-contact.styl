.-agora .v-contact
	// width 376px
	// height 382px
	position relative
	
	// overflow auto

	&.t-dialog .content
		margin 0 0 10px
	&:not(.sent) .thankYou
		display none


	input[type="text"]
		box-sizing border-box
		padding 0 6px
		border-radius: 1px;
		background: #FFFFFF;
		box-shadow:         0px 0px 0px 2px rgba(0,0,0,0.10);

		font-family: Helvetica;
		font-size: 12px;
		color: #696969;
		line-height: 14px;

		height 29px

	form
		width 354px
		float left
		background-color #696969
		border-radius 2px
		position relative
		padding 10px

		margin 15px 2px 4px

		.messageWrapper
			box-style()
			box-shadow none
			padding 7px


		input[name="subject"]
			margin-bottom 10px
			width 100%

		textarea
			width 100%
			height 200px
			padding 0
			border-width 0
			background-color transparent
			color $darkGray




		input[type="submit"]
			box-style()
			float right
			height 29px
			min-width 81px
			font-size 12px
			text-align center
			box-shadow none
			margin-top 10px


		.thankYou
			color: white;
			float: left;
			width: 260px;
			margin-top 10px
