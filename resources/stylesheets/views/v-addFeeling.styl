.-agora .v-addFeeling
	background-color $darkGrayColor
	border-radius 2px
	padding 10px
	width 177px
	box-sizing border-box
	font-size 12px
	span
		color white

	.emotion
		display block
		background-repeat no-repeat
		height 100%
		width 20px

		background-position center

		&.positive
			width 16px
			height 12px
			image $base + 'smileWhite.png' 16px 12px

		&.negative
			width 16px
			height 12px
			image $base + 'frownWhite.png' 16px 12px

		&.veryPositive
			width 16px
			height 12px
			image $base + 'bigSmileWhite.png' 16px 12px

		&.veryNegative
			width 16px
			height 12px
			image $base + 'bigFrownWhite.png' 16px 12px

		&.neutral
			width 16px
			height 12px
			image $base + 'neutralFaceWhite.png' 16px 12px

		&.mixed
			width 16px
			height 12px
			image $base + 'mixedExpressionWhite.png' 16px 12px


	.feelings
		li
			position relative
			min-height 21px
			line-height 21px

			margin-bottom 5px


			&:not(:hover) .delete
				display none


			&:hover .emotion
				display none

			.emotion
				position absolute
				right 0
				top 3px


			.delete
				image $base + 'smallTrashWhite.png' 14px 16px
				display block
				width 14px 
				height 16px
				right 1px
				top 1px

				position absolute

				// &:hover
				// 	image $base + 'trashHover.png' 14px 16px

	form
		position relative

	input[type=text]
		width 130px

	.emotionSummary
		@extend .-agora .v-addFeeling .emotion
		height 20px
		position absolute
		right 0
		top 9px
		display inline-block


	&.light
		background-color $lightGrayColor
		span
			color $darkGrayColor

		.emotion
			&.positive
				image $base + 'smileDarkGray.png' 16px 12px

			&.negative
				image $base + 'frownDarkGray.png' 16px 12px

			&.veryPositive
				image $base + 'bigSmileDarkGray.png' 16px 12px

			&.veryNegative
				image $base + 'bigFrownDarkGray.png' 16px 12px

			&.neutral
				image $base + 'neutralFaceDarkGray.png' 16px 12px

		.emotionSummary
			@extend .-agora .v-addFeeling.light .emotion

		.feelings
			li
				.delete
					image $base + 'smallTrashDarkGray.png' 14px 16px

	&.left
		input[type=text]
			margin-left 28px
		.emotionSummary
			left 0

		.feelings
			.emotion
				left 0
				right auto

			.delete
				left 3px
				right auto

			.thought
				margin-left 29px
