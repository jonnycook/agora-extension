.-agora .v-share
	width 376px
	height 241px
	position relative

	&.success
		.content
			height 136px
			*
				display none
			image $base + 'collaborate/success.png' 60px 60px
			background-position center
			background-repeat no-repeat

			&:before
				content 'success!'
				position absolute
				left 0
				right 0
				text-align center
				top 147px
				font-size 18px

	
	.users
		li
			position relative
			height 20px
			line-height 20px
		.delete
			image $base + 'smallTrashDarkGray.png' 14px 16px
			display block
			width 14px 
			height 16px
			right 1px
			top 1px

			position absolute


	.title, .message
		margin-bottom 10px

	input[type="text"]
		box-style()

		box-sizing border-box
		padding 0 6px
		// border-radius: 1px;
		// background: #FFFFFF;
		// box-shadow:         0px 0px 0px 2px rgba(0,0,0,0.10);

		font-family: Helvetica;
		font-size: 12px;
		color: #696969;
		line-height: 14px;

		height 29px

		width 100%


	textarea
		box-style()
		width 100%
		height 90px
		padding 6px
		border-width 0
		color $darkGray
		box-sizing border-box



	input[type="text"].add
		width 288px
		margin-right 5px


	input[type="button"]
		box-style()
		width 47px
		height 29px
		text-align center
		background-color $darkGray
		color white
