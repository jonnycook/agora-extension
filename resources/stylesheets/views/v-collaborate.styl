.-agora .v-collaborate
	*
		font-size 13px
	padding 20px

	width 340px
	height 260px
	box-sizing border-box

	.tabs 
		font-size 0
		.tab
			font-size 18px
			display inline-block
			width 50%
			text-align center
			cursor pointer
			padding-bottom 3px


	h2
		font-size 22px
		margin 0 0 10px 0

	&.collaborators .content .activity
	&.activity .content .collaborators
		display none

	&.collaborators .tabs .collaborators
	&.activity .tabs .activity
		font-weight bold
		border-bottom 4px solid $darkGray

	ul.collaborators
		max-height 186px
		overflow auto

		.collaborator
			& + .collaborator
				margin-top 3px
				
			height 26px
			line-height @height
			position relative

			.abbreviation
				display inline-block
				width 26px
				height 26px
				line-height 26px
				text-align center

				border-radius 1px
				font-size 14px
				color white
				background-color $darkGray
				border-radius 13px

				&.white
					color $darkGray

			.delete
				image $base + 'smallTrashDarkGray.png' 14px 16px
				display block
				width 14px 
				height 16px
				right 1px
				top 1px

				position absolute

	&:not(.owner)
		.invite
			display none
		ul.collaborators .collaborator .delete
			display none

	&.owner
		.invite
			color white
			position: absolute;
			bottom: 20px;
			/* width: 100%; */
			height: 27px;
			line-height: 28px;
			text-align: center;
			left: 20px;
			right: 20px;
			background: $darkGray;
			border-radius 2px

	.content
		margin-top 11px

	ul.activity
		max-height 186px
		overflow auto

		.entry
			padding-left 79px - 40px

			.type
				position absolute
				left 0
				top 2px
				width 21px
				height 40px
				background-repeat no-repeat
				background-position center
				background-size contain

			&.add .type
				image $base + 'collaborate/activityAdd.png' 18px 18px

			&.remove .type
				image $base + 'collaborate/activityRemove.png' 16px 19px

			&.decision-select .type
				image $base + 'collaborate/activitySelected.png' 21px 17px

			&.decision-deselect .type
				image $base + 'collaborate/activityDeselected.png' 21px 17px

			&.convert .type
				image $base + 'collaborate/activityConverted.png' 20px 20px

			position relative
			&.hasImage
				padding-left 79px
				.imagePreview
					mosaic()
					&.oneItem
						.image
							background-size contain
					position absolute
					left 31px
					top 2px
					width 40px
					height 40px
					// background-repeat no-repeat
					// background-position center
					// background-size contain
					background-color white
					overflow hidden
					border-radius 2px
					display block

			margin-bottom 11px
			.text
				display block
				.object
					font-weight bold
					position relative

					&.user
						.name
							font-weight bold
						.color
							display inline-block
							width 8px
							height 8px
							border-radius 4px

					&.product, &.decision
						cursor pointer

			.timestamp
				display block
				font-size 11px



