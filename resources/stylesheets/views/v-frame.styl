.-agora.v-frame
	.client
		position relative
	z-index $bottomBarZ + 1

	.close
		position absolute
		display block
		image $base + 'closeLightGray.png' 18px 18px
		width 18px
		height 18px

		top 20px
		right 18px
		z-index 1

		&:hover
			image $base + 'closeDarkGray.png' 18px 18px


.-agora.v-frame.ds
	table-layout fixed
	
	td, tr, &
		border-spacing 0
		padding 0
		
	.c
		background-color white
		position relative
		
		.client
			margin 6px
			position relative
	
	$height = 4px
	$width = 4px
	
	//margin $height*-1 0 0 $width*-1
	
	.t, .b
		height $height
		
	.l, .r
		width $width

	for $s in t r b l tl tr bl br
		.{$s}
			background-image url($base + $s + '.png')

	&.top .b
		height 8px
		background top center url($base + 'b-a.png')

.-agora.v-frame.hover
	background-color white
	border-radius 2px
	box-shadow:         0px 0px 0px 4px rgba(0,0,0,0.10), inset 0px -2px 0px 0px #D9D9D9;

.-agora.v-frame.balloon
	border-radius 1px
	box-shadow 0px 0px 0px 2px rgba(0,0,0,0.10)

	&:not(.dark)
		background-color white

	&.dark
		background-color $darkGray

	.-string
		position absolute
		left 50%
		margin-left -7px
		width 14px


	&.below
		.-string
			top -7px
			image $base + 'balloonFrameStringAbove.png' 14px 7px

	.-string
		bottom -7px
		height 7px
		image $base + 'balloonFrameString.png' 14px 7px

	&.dark 
		.-string
			margin-left -5px
			width 10px
			image $base + 'balloonFrameStringDarkGray.png' 10px 7px

		&.below
			.-string
				margin-left -5px
				top -7px
				image $base + 'balloonFrameStringAboveDarkGray.png' 10px 7px


.-agora.v-frame.tooltip
	border-radius 1px
	box-shadow 0px 0px 0px 2px rgba(0,0,0,0.10)
	background-color #696969
	cursor default
	.client
		color white
		padding 7px
		font-size 12px

	.-cover, .-arrow
		position absolute
		left 50%
		margin-left -6px
		width 12px

	.-cover
		background-color white
		height 2px
		bottom -2px
		display

	&.below .-arrow
		top -7px
		image $base + 'tooltipArrowTop.png' 12px 7px

	&.below .-cover
		top -2px

	.-arrow
		bottom -7px
		height 7px
		image $base + 'tooltipArrow.png' 12px 7px


@css {
	body.-agora-modelOpen > :not(.-agora) {
		/*-webkit-filter: blur(7px) grayscale(1) invert(0.3) brightness(1.3) !important*/
		-webkit-filter: grayscale(1) opacity(.1) blur(0) !important
	}
}

