.-agora .v-addArgument
	background-color #696969
	border-radius 2px
	padding 10px
	width 160px
	font-size 12px
	span
		color white

	.position
		display block
		background-repeat no-repeat
		height 100%
		width 12px
		height 12px

		background-position center

		&.for
			image $base + 'proWhite.png' 12px 12px

		&.against
			image $base + 'conWhite.png' 12px 4px


	.arguments
		li
			position relative
			height 21px
			line-height 21px

			margin-bottom 5px

			&:not(:hover) .delete
				display none


			&:hover .position
				display none

			.position
				position absolute
				right 0
				top 5px

			.delete
				image $base + 'smallTrashWhite.png' 14px 16px
				display block
				width 14px 
				height 16px
				right -1px
				top 2px

				position absolute

				// &:hover
				// 	image $base + 'trashHover.png' 14px 16px

	form
		position relative

	input[type=text]
		width 137px

	.positionPreview
		@extend .-agora .v-addArgument .position
		position absolute
		right 0px
		top 9px
		display inline-block

	&.left
		input[type=text]
			margin-left 23px
		.positionPreview
			left 0

		.arguments
			.position
				left 0
				right auto

			.delete
				left -1px
				right auto

			.thought
				margin-left 23px

	&.light
		.position
			&.for
				image $base + 'proDarkGray.png' 12px 12px

			&.against
				image $base + 'conDarkGray.png' 12px 4px

		.delete
			image $base + 'smallTrashDarkGray.png' 14px 16px

