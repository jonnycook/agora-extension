.-agora .v-editDescriptor
	// width 376px
	// height 382px
	position relative
	
	// overflow auto

	&.t-dialog .content
		margin 0

	input[type="text"]
		box-sizing border-box
		padding 0 6px
		border-radius 1px
		background #ffffff
		box-shadow 0px 0px 0px 2px rgba(0, 0, 0, 0.10)

		font-family Helvetica
		font-size 12px
		color #696969
		line-height 14px

		height 29px

	.buttons
		position absolute

		bottom 10px
		right 10px
		& + .button
			margin-left 3px

		.button
			box-style()
			height 29px
			min-width 81px
			font-size 12px
			text-align center
			box-shadow none


	form
		.fields
			width 354px
			overflow hidden
			background-color #696969
			border-radius 2px
			position relative
			padding 10px
			// margin-bottom 10px

		margin 12px 2px 2px


		label
			display none
			height 17px
			color white

		.group
			float left
			width 354px

			& + .group
				margin-top 8px

		.field
			& + .field
				margin-left 6px

		.group.descriptor
				input[type=text].descriptor
					width 100%

		.group:nth-child(2)
			.field
				float left

			input[type="text"]
				width 114px


		.group.properties
			input[type=text]
				width 100%

		.group.recipient
			.field
				float left

			// .field:last-child :last-child
			// 	width 80px

			input[type=text], .t-select
				width 99px

			input[name="recipient.age"]
				width 39px

			.t-select
				height 29px
				line-height 18px

		.group.gift
			.field
				&:first-child
					label
						display block

					input
						display block
						margin auto
				float left

	span.-agora-newItem
		clear left
		margin 0 auto
		display block
		width 48px
		height 48px

