.-agora .v-compareTile
	position relative

	&.public
		.tileItem
			.actions
				display none

		div.tileItem.product:not(.selectMode):hover .productMenu
			display none

		&.Decision h2.title
			.edit
				display none

			&:hover .icon
				visibility visible

	h2.title
		height 23px
		margin 0 0 30px 0

		&, *
			color white


		> .title .title, > .price
			font-size 16px
			color white

		> .price, > .title
			display block

		> .title
			position relative
			height 20px

			.title
				left 0
				right 170px
				position absolute
				truncated-text()
				
			.continue
				color white
				font-size 13px
				float right
				margin-top 1px

				.arrow
					position relative
					top 1px
					color white
					font-size 12px

		> .price
			.price
				color white
				font-size 15px
				vertical-align middle

			.icon
				margin-left 4px
			font-weight bold


	&.Decision
		h2.title
			position relative

			// &:not(:hover) .edit
			// 	display none
			.descriptor
				font-size 16px

			.edit
				position absolute
				left 0
				top 6px

				margin-left 4px
				display inline-block
				width 15px
				height 14px
				image $base + 'pencilLightGray.png' 15px 14px
				opacity .5

				&:hover
					// image $base + 'pencilDarkGray.png' 15px 14px
					opacity 1

			.icon
				display inline-block
				width 20px
				height 20px
				vertical-align middle
				margin-right 4px

				&:not(:hover)
					opacity .5

			&:not(:hover)
				.edit
					display none

			&:hover
				.icon
					visibility hidden


	.breadcrumbs
		li
			width 48px
			height 48px
			position relative
			display inline-block
			border-radius 2px
			box-shadow 0px 0px 0px 2px rgba(0,0,0,0.10)


			&:not(:last-child)
				cursor pointer

			&:last-child
				box-shadow 0px 0px 0px 4px rgba(0,0,0,0.10)


			& + li
				margin-left 30px

				&:before
					content ''
					position absolute
					width 9px
					height 16px

					left -18px
					top 17px
					image $base + 'views/compare/Tile/breadcrumbArrow.png' 9px 16px

			mosaic()

			.images
				background-color white
				overflow hidden
				border-radius 2px
				display block
				width 100%
				height 100%
				position relative
				background-size contain
				background-position center
				background-repeat no-repeat



	.client
		position relative
		&.frame
			background-color rgba(255, 255, 255, .6)

			margin-top 22px
			margin-left -33px

			border 33px solid @background-color
			border-radius 2px
			background-clip content-box

			.-arrow
				width 22px
				height 9px
				image $base + 'views/compare/Tile/frameArrow.png' 22px 9px
				opacity .6

			.close
				image-block $base + 'closeLightGray.png' 18px 18px
				z-index 100000
				position absolute
				right -10px
				top -10px

				&:hover
					image $base + 'closeDarkGray.png' 18px 18px


		> .properties
			position absolute
			width 104px
			left -140px
			top 0


	.items
		position relative

		.rootItem
			shadow-style()

		&.masonry
			.tileItem
				margin-bottom 40px		


	.dismissalList
		width 104px
		position absolute 
		right -(104px + 50px)
		top 0
		.clear
			display block
			visibility hidden
			width 48px
			height 48px
			background-position center
			background-repeat no-repeat
			margin 0 auto

			image $base + 'closeLightGray.png' 18px 18px

			&:hover
				image $base + 'closeDarkGray.png' 18px 18px
		ul
			border-top 2px solid #D8D8D8
			border-top-color transparent
			padding-top 15px
			li
				box-style()
				width 102px
				height 102px
				position relative

				border-radius 2px
				overflow hidden
				border 2px solid white

				background-color white
				background-size contain
				background-position center
				background-repeat no-repeat

				mosaic()

				// cursor pointer

				&:not(:hover)
					.restore, .remove
						display none

				$spacing = 7px
				.restore
					position absolute
					top 0
					left 0
					right 0
					bottom 0
					image $base + 'plus.png' 26px 26px
					background-repeat no-repeat
					background-position center
					z-index 100

				.remove
					position absolute
					top 0
					right 0
					width 18px
					height 18px
					image $base + 'closeDarkGray.png' 18px 18px
					background-repeat no-repeat
					background-position center
					z-index 100
					padding 5px
					background-color white
					border-radius 2px
					border-top-left-radius 0
					border-bottom-right-radius 0


					&:hover
						hover-style()
						// image $base + 'closeDarkGray.png' 18px 18px


				& + li
					margin-top 10px

	.v-productPreview
		$top = 0

		top 0
		right 0
		left 0 
		bottom 0
		position absolute

		.picture
			top $top

		.pictures
			top $top

		.productMenu
			top $top

.-agora
	div.tileItem
		width 189px
		height 189px
		position absolute
		background-color white
		border-radius 2px

		.userIndicator
			position absolute
			left 2px
			bottom 2px
			width 8px
			height 8px
			border-radius 4px
			z-index 1



		&.shared
			.shareIndicator
				position absolute
				z-index 2

			&:not(:hover) .shareIndicator
					left 2px
					bottom 2px
					width 8px
					height 8px
					border-radius 4px
					background-color $darkGray

			&:hover .shareIndicator
					bottom -5px
					left -5px
					width 22px
					height 22px
					image $base + 'collaborate/collaborateIndicator.png' 10px 13px
					background-position center
					background-repeat no-repeat
					border-radius 11px
					background-color $darkGray


		&.activeDrop:before
			content ''
			position absolute
			left 0
			right 0
			top 0
			bottom 0
			image $base + 'plus.png' 26px 26px
			background-repeat no-repeat
			background-position center
			background-color rgba(0, 0, 0, .15)
			z-index 2
			border-radius 2px

		.select
			visibility hidden
			position absolute
			left 0
			top 0
			width 100%
			height 100%

			z-index 10

			&:hover:before
				image $base + 'views/ShoppingBar/selectHover.png' 30px 30px

			&:checked:before
				image $base + 'views/ShoppingBar/selectChecked.png' 30px 30px


			&:before
				visibility visible
				content ''
				width 100%
				height 100%
				display block
				image $base + 'views/ShoppingBar/select.png' 26px 26px
				background-repeat no-repeat
				background-position center


		&.dragging
			z-index 9999999

		&.selectMode, &:hover.selectMode
			.actions
				visibility hidden

			.actions :not(:checked).chosen:before
				visibility hidden


		&:not(:hover) .actions
			visibility hidden

		&:hover .actions .chosen:before
			visibility visible

		.actions
			z-index 1000
			position absolute

			height 32px
			width 64px

			right 6px
			top 6px

			background-color white
			border-bottom-left-radius 2px

			*
				float left

			.dismiss
				display inline-block
				width 32px
				height 32px
				background-repeat no-repeat
				background-position center
				image $base + 'closeDarkGray.png' 18px 18px
				&:hover
					// image $base + 'closeDarkGray.png' 18px 18px
					hover-style()

			input.chosen
				visibility hidden
				width 32px
				height 32px

				// &:hover
				// 	hover-style()

				&:checked:before
					image $base + 'views/ProductPopup/checkDarkGray.png' 20px 17px
					visibility visible

				&:before
					content ''
					display inline-block

					width 32px
					height 32px
					image $base + 'views/ProductPopup/checkLightGray.png' 20px 17px

					background-repeat no-repeat
					background-position center

					background-color white
					border-radius 1px
		&.masonry
			width 185px
			height 185px
			padding 6px


	div.tileItem.decision div.tileItem.product:nth-of-type(1)
		.feelingBadge
			top 42px

	div.tileItem.unauthorized
		&:after
			content ''
			position absolute
			top 0
			bottom 0
			left 0
			right 0
			image $base + 'unauthorizedLarge.png' 70px 70px
			background-repeat no-repeat
			background-position center

		&.Decision
			image $base + 'icons/listDarkGrayLarge.png' 109px 109px
			background-position center
			background-repeat no-repeat


	div.tileItem.product
		&.tiles
			span.image
				display block
				position absolute
				left 2px
				top 2px
				width 185px
				height 185px
				background-size contain
				background-position center
				background-repeat no-repeat

			.properties
				margin-top 185px

		&.masonry
			width 185px
			height 185px
			padding 6px

			// box-sizing border-box
			// padding 2px
			img.image
				width 185px
				display block
				border-radius 2px
				overflow hidden

				// Amazon search results page
				float none

			.properties
				margin 2px 0px !important // Amazon is using some important styles 
				> li
					font-size 12px
					& + li
						margin-top 10px

				.feelings
					li 
						@extend .-agora .v-addFeeling .feelings li

						.delete
							@extend .-agora .v-addFeeling .feelings li .delete
							@extend .-agora .v-addFeeling.light .feelings li .delete

						.emotion
							@extend .-agora .v-addFeeling .emotion
							@extend .-agora .v-addFeeling.light .emotion

				.arguments
					li
						@extend .-agora .v-addArgument .arguments li

						.delete
							@extend .-agora .v-addArgument .arguments li .delete
							@extend .-agora .v-addArgument.light .delete
							right 3px

						.position
							@extend .-agora .v-addArgument .position
							@extend .-agora .v-addArgument .arguments li .position
							@extend .-agora .v-addArgument.light .position

							right 4px


		.feelingBadge
			left -10px
			// top 42px
			top 9px
			position absolute
			// width 28px
			// height 28px
			z-index 1001


		&:not(.selectMode):hover
			.feelingBadge
				@extend .-agora .feelingBadge.showText

			.productMenu
				display block

		&.pinSidebar .productMenu
			display block

		&:not(:hover):not(.pinSidebar) .productMenu
			display none

		.productMenu
			position absolute
			width 185px

			// display none
			// position absolute
			// right -30px
			// top 0

	div.tileItem.bundle
		.grip
			background-color rgba(0, 0, 0, .10)

			border-radius 2px

			&.left
				border-top-right-radius 0
				border-bottom-right-radius 0

			&.right
				border-top-left-radius 0
				border-bottom-left-radius 0

			&.middle
				border-radius 0

	div.tileItem.decision
		.count
			position absolute
			z-index 1
			padding 8px 16px
			background-color white

			// border-top-left-radius 2px
			// border-bottom-right-radius 2px

			cursor pointer

			.list
				color $lightGray
				font-size 14px
				font-weight bold

			&:hover
				.list
					color $darkGray


		.preview
			display none

		&.empty
			.preview
				background-color white
				display block
				left 2px
				top 2px
				bottom 2px
				right 2px
				mosaic()
				position absolute

				&.empty
					display none

				.icon
					width 56px
					height 56px
					position absolute
					left 50%
					top 50%
					margin-left -(@width/2)
					margin-top -(@height/2)
					background-size contain
					background-position center
					background-color white
					border-radius (@width/2)
					overflow hidden


		&.masonry
			.count
				top 6px
				left 6px
				border-bottom-right-radius 2px





	div.tileItem.list
		.backing
			background-color white
			border-radius 2px

			&.left
				border-top-right-radius 0
				border-bottom-right-radius 0

			&.right
				border-top-left-radius 0
				border-bottom-left-radius 0

			&.middle
				border-radius 0

.agoraMenu
	z-index 1
	&.public
		.selectionMode
			display none

		.share
			display none

	.item.share
		a
			image $base + 'shareLightGray.png' 28px 28px
			&:hover
				image $base + 'shareWhite.png' 28px 28px

	.item.settings
		.submenu
			width 122px
			padding 5px
			box-sizing border-box
			background-color $darkGray
			color white
			border-radius 1px

		.properties
			.property
				z-index 0
				border-radius 1px
				&:hover
					background-color rgba(255, 255, 255, .2)
				&.none
					display none
				.selected
					position absolute
					left 3px
					top 5px
					z-index -1

					visibility hidden
					width 12px
					height 10px

					&:before
						visibility visible

						content ''
						display inline-block

						width 12px
						height 10px
						// image $base + 'views/ProductPopup/checkLightGray.png' 20px 17px

					&:checked:before
						image $base + 'smallCheckWhite.png' 12px 10px

				label
					position relative
					color white
					padding-left 15px
					display block
					z-index 0

				position relative
				padding 3px

	.item.selectionMode
		.submenu
			box-sizing border-box
			background-color $darkGray
			color white
			border-radius 1px

			width 52px
			.group
				padding 2px 0

				& + .group
					border-top 2px solid #D8D8D8
					width: 39px;
					margin: 0 auto;

					a
						margin-left -3px

			a
				display block
				width 52px
				height 52px
				margin-left 2px
				background-repeat no-repeat
				background-position center
				position relative

				// &:hover
				// 	background-color #696969
				// 	white-space nowrap
				// 	border-top-left-radius 1px
				// 	border-bottom-left-radius 1px

				label
					background-repeat no-repeat
					cursor pointer
					height 48px
					margin-top 2px
					display block
					position absolute

				&:not(:hover) label
					font-size 0
					width 48px

				&:hover label
					font-size 12px
					line-height 48px
					box-style()
					padding 0 10px 0 53px
					color $darkGray
					left 0
					border-top-right-radius 1px
					border-bottom-right-radius 1px

				&.selectMode								
					image $base + 'views/ShoppingBar/selectIcon.png' 26px 26px
					&:hover
						image $base + 'views/ShoppingBar/selectIconHover.png' 26px 26px

				&.settings
					image $base + 'views/ShoppingBar/settingsIconLightGray.png' 26px 26px
					&:hover
						image $base + 'views/ShoppingBar/settingsHover.png' 26px 26px

				&.home
					image $base + 'homeDarkGray.png' 28px 24px
					&:hover
						image $base + 'views/ShoppingBar/homeMenuHover.png' 28px 24px


				&.workspace
					image $base + 'workspaceDarkGray.png' 28px 17px
					&:hover
						image $base + 'workspaceWhite.png' 28px 17px

				&.contact
					image $base + 'views/ShoppingBar/contact.png' 28px 24px
					&:hover
						image $base + 'views/ShoppingBar/contactHover.png' 28px 24px

				&.cancel
					image $base + 'closeHover.png' 18px 18px
					&:hover
						image $base + 'views/ShoppingBar/cancelHover.png' 18px 18px

				&.bundle
					label
						background-position 12px center
						image $base + 'bundleWhite.png' 24px 21px
					&:hover label
						image $base + 'bundleDarkGray.png' 24px 21px

				&.delete 
					label
						background-position 12px center
						image $base + 'trashWhite.png' 22px 24px
					&:hover label
						image $base + 'trashDarkGray.png' 22px 24px

				&.split 
					label
						background-position 9px center
						image $base + 'splitWhite.png' 34px 18px
					&:hover label
						image $base + 'splitDarkGray.png' 34px 18px

				&.extract 
					label
						background-position 11px center
						image $base + 'extractWhite.png' 26px 21px
					&:hover label
						image $base + 'extractDarkGray.png' 26px 21px

				&.wrap 
					label
						background-position 11px center
						image $base + 'wrapWhite.png' 26px 27px
					&:hover label
						image $base + 'wrapDarkGray.png' 26px 27px

